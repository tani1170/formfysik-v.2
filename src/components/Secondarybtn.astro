---
import "../styles/global.css";

const { content } = Astro.props;
---

<button class="btnsek slide"
  ><p class="font-btn">{content}</p>
</button>

<style>
  .btnsek {
    background: none;
    border: 3px solid
      var(--secondary-border);
    border-radius: 10px;
    transition: ease-out 0.3s;
  }

  p {
    padding: 0px 40px;
    color: var(--secondary-text);
    margin: 0.6rem;
  }

  p:hover {
    color: var(--secondary-text);
  }

  .btnsek:hover {
    box-shadow: inset 310px 0 0 0
      var(--secondary-hover);
    cursor: pointer;
    color: var(--secondary-text);
  }
</style>
