---
import "../styles/global.css";

const { content } = Astro.props;
---

<button class="terbtn slide"
  ><p class="font-btn">{content}</p>
</button>

<style>
  .terbtn {
    background-color: var(
      --color-terbtn-bg
    );
    outline: none;
    border: none;
    border-radius: 10px;
    box-shadow: inset 0 0 0 0
      var(--color-btn-hover);
    transition: ease-out 0.5s;
  }
  p {
    padding: 13px 30px;
    margin: 0;
    color: var(--color-footer-text);
  }

  .terbtn:hover {
    box-shadow: inset 300px 0 0 0
      var(--color-btn-hover);
    cursor: pointer;
  }

  p:hover {
    color: var(--color-tabel-text);
  }
</style>
