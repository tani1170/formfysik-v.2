---
import "../styles/global.css";
const {
  navn,
  stilling,
  info,
  tjek1,
  tjek2,
  tjek3,
  src,
} = Astro.props;
---

<section
  class="personlig_instruktor_section"
>
  <img {src} alt="instruktor" />
  <div class="content">
    <div>
      <h4>
        {navn}
      </h4>
      <p class="bread">
        {stilling}
      </p>
    </div>
    <div>
      <p class="bread-bold">Speciale</p>
      <p class="bread">{info}</p>
    </div>

    <ul>
      <li class="bread">{tjek1}</li>
      <li class="bread">{tjek2}</li>
      <li class="bread">{tjek3}</li>
    </ul>
  </div>
</section>

<style>
  section {
    display: flex;
    place-content: center;
  }
  .personlig_instruktor_section img {
    rotate: -3deg;
    border-radius: 10px;
    max-height: auto;
    max-width: 14rem;
  }
  .content {
    width: 20rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 19rem;
  }
  h4,
  p,
  li {
    color: var(--color-footer-text);
    margin: 0;
  }

  .personlig_instruktor_section {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    gap: 2rem;
    padding-right: 2rem;
    padding-left: 2rem;
  }

  @media (min-width: 750px) {
    .personlig_instruktor_section {
      display: flex;
      flex-direction: row;
      gap: 1rem;
    }
  }
</style>
