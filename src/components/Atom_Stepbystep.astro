---
import "../styles/global.css";
import "../styles/styles.css";

const { step1, step2, step3 } =
  Astro.props;
---

<div class="stepper-wrapper">
  <div class="stepper-item completed">
    <div
      class="stepbystep step-counter"
    >
      1
    </div>
    <div
      class="stepbysteptext step-name"
    >
      {step1}
    </div>
  </div>
  <div class="stepper-item completed">
    <div
      class="stepbystep step-counter"
    >
      2
    </div>
    <div
      class="stepbysteptext step-name"
    >
      {step2}
    </div>
  </div>
  <div class="stepper-item active">
    <div
      class="stepbystep step-counter"
    >
      3
    </div>
    <div
      class="stepbysteptext step-name"
    >
      {step3}
    </div>
  </div>
</div>

<style>
  .stepper-item {
    position: relative;
    display: flex;
    gap: 2rem;
    flex-direction: row;
    align-items: left;
    flex: 1;
  }

  .stepper-item::after {
    position: absolute;
    content: "";
    background: var(--primary-hover);
    z-index: 2;
    height: 0.4rem;
  }

  .step-name {
    margin-top: 1.5rem;
  }
  .stepper-item .step-counter {
    position: relative;
    z-index: 5;
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--primary);
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: var(--primary-hover);
    margin-bottom: 3rem;
  }

  .stepper-item.completed::after {
    position: absolute;
    content: "";
    background: var(--primary-hover);
    width: 50%;
    top: 100%;
    left: -10%;
    z-index: 3;
    rotate: 90deg;
  }

  @media (min-width: 850px) {
    .stepper-wrapper {
      margin-top: 5rem;
      display: flex;
      justify-content: space-between;
      place-content: center;
    }
    .stepper-item {
      flex-direction: column;
      align-items: center;
    }

    .stepper-item::after {
      left: 50%;
    }

    .stepper-item .step-counter {
      margin-bottom: 6px;
    }

    .stepper-item.completed::after {
      width: 100%;
      top: 30%;
      left: 50%;
      rotate: 180deg;
    }
  }
</style>
