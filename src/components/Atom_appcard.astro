---
import "../styles/global.css";
const { step, beskrivelse, src } =
  Astro.props;
---

<div class="card_wrapper">
  <div class="image">
    <img
      src={src}
      alt="vejledningsbillede"
    />
    <div class="step">
      <p class="guide-bold">{step}</p>
    </div>
  </div>
  <p class="bread">
    {beskrivelse}
  </p>
</div>

<style>
  .card_wrapper {
    display: flex;
    flex-direction: column;
    width: 17rem;
    height: 30rem;
    height: fit-content;
  }
  image {
  }

  img {
    width: 17rem;
    height: 21rem;
    object-fit: cover;
    border-radius: 10px;
  }
  .step {
    background-color: var(
      --primary-hover
    );
    border-radius: 100%;
    height: 3rem;
    width: 3rem;
    display: flex;
    place-items: center;
    place-content: center;
    position: relative;
    bottom: 2rem;
    right: 1rem;
  }

  p {
    color: var(--tertiary);
    margin: 0;
  }
</style>
