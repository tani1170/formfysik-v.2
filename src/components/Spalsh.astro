---
import "../styles/global.css";

import Secondarybtn from "./Secondarybtn.astro";
import Teamscroll from "./Teamscroll.astro";
import Tertiarbtn from "./Tertiarbtn.astro";

const {
  splashbillede,
  titel,
  undertitel,
  sekbtn,
  sektext,
  terbtn,
  tertext,
  sekdestination,
  terdestination,
  component,
  illustration,
  illustrationbillede,
  breadtext,
} = Astro.props;
---

<section>
  <div class="content_wrapper">
    <div class="content">
      <h1>
        {titel}
      </h1>
      <h3>
        {undertitel}
      </h3>

      <p class="bread">{breadtext}</p>

      <div class="buttons">
        {
          sekbtn == true && (
            <a href={sekdestination}>
              <Secondarybtn
                content={sektext}
              />
            </a>
          )
        }

        {
          terbtn == true && (
            <a href={terdestination}>
              <Tertiarbtn
                content={tertext}
              />
            </a>
          )
        }
      </div>
    </div>
  </div>
  {
    component == true && (
      <div class="component">
        <Teamscroll />
      </div>
    )
  }

  {
    illustration == true && (
      <div class="image">
        <img
          src={illustrationbillede}
          alt="illustration"
        />
      </div>
    )
  }
</section>

<style>
  p {
    margin-bottom: 3rem;
  }
  .content_wrapper {
    margin-left: 2rem;
    margin-right: 2rem;
  }
  .buttons {
    display: flex;
    flex-direction: column-reverse;
    gap: 1rem;
  }

  .image {
    width: 100%;
    height: 45rem;
    overflow: hidden;
  }
  img {
    width: 100%;
    height: 50%;
    object-fit: contain;
    object-position: 60px 5px;
    z-index: -1;
  }

  .content {
    margin-top: 10rem;
    color: var(--color-bread-text);
  }

  section {
    height: 93vh;
  }

  /* Desktop */
  @media (min-width: 850px) {
    .buttons {
      display: flex;
      flex-direction: row;
      gap: 2rem;
    }
    section {
      display: flex;
      min-height: 90vh;
    }

    .content_wrapper {
      max-width: 30rem;
    }
    .image {
      width: 100%;
      z-index: -1;
      overflow: hidden;
      display: flex;
      place-content: end;
      padding-top: 10rem;
      place-items: end;
    }
    img {
      width: 82%;
      height: 100%;
      object-fit: contain;
    }

    .component {
      margin-top: 0;
    }

    h1 {
      font-size: 60px;
    }

    .content {
      width: 45rem;
      padding-left: 7rem;
      margin-top: 12rem;
      padding-bottom: 6rem;
    }

    section {
      height: 70vh;
    }
    p {
      max-width: 35rem;
    }
  }
</style>
