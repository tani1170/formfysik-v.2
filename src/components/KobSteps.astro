---
import "../styles/global.css";
import "../styles/styles.css";

const { step1, step2, step3 } =
  Astro.props;
---

<div class="stepper-wrapper">
  <div class="stepper-item completed">
    <div class="stepkob step-counter">
      1
    </div>
    <div class="stepkobtext step-name">
      {step1}
    </div>
  </div>
  <div class="stepper-item completed">
    <div class="stepkob step-counter">
      2
    </div>
    <div class="stepkobtext step-name">
      {step2}
    </div>
  </div>
  <div class="stepper-item active">
    <div class="stepkob step-counter">
      3
    </div>
    <div class="stepkobtext step-name">
      {step3}
    </div>
  </div>
</div>

<style>
  .stepper-item {
    position: relative;
    display: flex;
    gap: 2rem;
    flex-direction: row;
    align-items: left;
    flex: 1;
  }

  .stepper-item::after {
    position: absolute;
    content: "";

    z-index: 2;
    height: 0.4rem;
  }

  .stepper-item .step-counter {
    position: relative;
    z-index: 5;
    display: flex;
    justify-content: center;
    align-items: center;

    width: 100px;
    height: 100px;
    border-radius: 50%;
  }

  .stepper-item.completed::after {
    position: absolute;
    content: "";

    width: 50%;
    top: 100%;
    left: -10%;
    z-index: 3;
    rotate: 90deg;
  }

  @media (min-width: 850px) {
    .stepper-wrapper {
      margin-top: 10rem;
      display: flex;
      justify-content: space-between;
      place-self: center;
      padding-left: 15rem;
      padding-right: 15rem;
    }
    .stepper-item {
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      flex: 1;
    }

    .stepper-item::after {
      position: absolute;
      content: "";

      left: 50%;
      z-index: 2;
      height: 0.4rem;
    }

    .stepper-item .step-counter {
      position: relative;
      z-index: 5;
      display: flex;
      justify-content: center;
      align-items: center;

      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: var(--primary-hover);
      margin-bottom: 6px;
    }

    .stepper-item.completed::after {
      position: absolute;
      content: "";
      background: var(--primary-hover);
      width: 100%;
      top: 20%;
      left: 50%;
      z-index: 3;
      rotate: 180deg;
    }
  }
</style>
