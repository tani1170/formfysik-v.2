---
import "../styles/styles.css";
const {
  titel,
  beskrivelse,
  src,
  destination,
} = Astro.props;
---

<a href={destination}>
  <div class="card">
    <div class="imagebox">
      <img {src} alt="holdfarve" />
    </div>
    <div class="content">
      <h3>{titel}</h3>
      <p class="bread">
        {beskrivelse}
      </p>
    </div>
  </div></a
>

<style>
  .card {
    gap: 3rem;
    display: grid;
  }
  .imagebox {
    height: 11rem;
    width: 11rem;
    border-radius: 10px;
    background-color: var(--value1);
  }
  .imagebox:hover {
    box-shadow: 12px 12px 80px 5px
      var(--primary);
  }

  img {
    width: 10rem;

    top: -25%;
    position: relative;
  }

  .content {
    width: 17rem;
    color: var(--tertiary);
  }

  h1,
  h3,
  p {
    margin: 0;
  }

  @media (min-width: 850px) {
    .card {
      padding-top: 5rem;
      padding-bottom: 5rem;
      display: flex;
    }
  }
</style>
