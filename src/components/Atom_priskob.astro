---
import "../styles/global.css";
import Primarybtn from "./Primarybtn.astro";
---

<div class="pris_wrapper">
  <div class="prisoversigt">
    <div class="info">
      <h3>Medlemsskab</h3>
      <div class="startdato">
        <p class="bread">Startdato:</p>
        <p class="filtertext" id="p1">
        </p>
      </div>
      <p class="bread">
        Vi er glade for at fortælle, at
        du får første måned <span
          class="bread-bold"
          >ganske gratis</span
        > - herefter koster det 319 kr pr/måneden
      </p>
    </div>
    <div class="pris">
      <p class="bread">Pris</p>
      <h3>0 kr</h3>
    </div>
  </div>
  <div class="btn">
    <Primarybtn
      content="Gem og fortsæt"
    />
  </div>
</div>

<style>
  .pris_wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .btn {
    display: grid;
  }
  .inputform {
    display: flex;
    flex-direction: column;
    place-items: end;
    gap: 1rem;
  }
  .startdato {
    display: flex;
    gap: 1rem;
    align-items: baseline;
  }
  .pris {
    display: flex;
    place-content: center;
    align-items: baseline;
    gap: 1rem;
  }
  .info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .prisoversigt {
    background-color: var(--primary);
    border-radius: 10px;
    color: var(--secondary);
    padding: 2rem;
    width: 20rem;
    height: fit-content;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  @media (max-width: 850px) {
    .prisoversigt {
      width: auto;
    }
  }
</style>
