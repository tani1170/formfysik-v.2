---
import "../styles/global.css";
import "../styles/styles.css";

const {
  titel,
  undertitel,
  beskrivelse,
  boldbread,
  fedbeskrivelse,
} = Astro.props;
---

<div class="content_wrapper">
  <h2>
    {titel}
  </h2>
  <h3>
    {undertitel}
  </h3>
  <p class="bread">
    {beskrivelse}
  </p>

  {
    boldbread == true && (
      <p class="bread-bold">
        {fedbeskrivelse}
      </p>
    )
  }
</div>

<style>
  .content_wrapper {
    display: grid;
    gap: 1rem;
    padding-left: 2rem;
    padding-right: 2rem;
  }
  h2,
  h3,
  p {
    margin: 0;
    color: var(--secondary);
  }

  @media (min-width: 850px) {
    .content_wrapper {
      padding-left: 10rem;
      padding-right: 10rem;
      max-width: 50rem;
    }
  }
</style>
