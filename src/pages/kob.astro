---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Form from "../components/Form.astro";
import KobSteps from "../components/KobSteps.astro";
import Atom_Priskob from "../components/Atom_priskob.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <link
      rel="stylesheet"
      href="https://use.typekit.net/lhr7bio.css"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />

    <meta
      name="description"
      content="Vi benytter os af privatlivspolitik, dine oplysninger bruges derfor kun til at godkende dig til vores medlemsskab ift. betalingsoplysninger."
    />
    <title>Medlems registrering</title>
  </head>
  <body class="body-bg">
    <Header />
    <section class="steps">
      <KobSteps
        step1="Persondata"
        step2="Betalingsmetode"
        step3="BekrÃ¦ftelse"
      />
    </section>
    <section class="form">
      <Form />
      <Atom_Priskob />
    </section>
    <Footer />
  </body>

  <style>
    .form {
      display: flex;
      gap: 2rem;
      place-content: center;
      place-items: baseline;
    }
    @media (max-width: 850px) {
      .steps {
        display: none;
      }
      .form {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        place-content: center;
        place-items: baseline;
      }
    }
  </style>
</html>
